@using OrderTracker.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Vendor Home</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link href="https://fonts.googleapis.com/css?family=Monoton&display=swap" rel="stylesheet">
        <link rel="stylesheet" type="text/css" media="screen" href="~/css/styles.css">
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1>EpiDOUGHdus <h1>
            </div>
            <h1>Vendor Details</h1>

            <h2><span class="labels">@Model["vendor"].Name</span></h2>
            <p>@Model["vendor"].Description</p>
            
            <h3><span class="labels">Open Orders:</span></h3>
            <ol>
                @foreach (var order in @Model["order"])
                {
                <li><a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Name</a></li>
                }
            </ol>
    
            <a href='/vendor/@Model["vendor"].Id/order/new'><button class="btn" type="click" name="button">Create New Order</button></a>
            <a href="/vendor"><button class="btn" type="click" name="button">Back</button></a>  
        </div> 
    </body>
</html>